@using BHI_Asset_Portal_WebApp.Models;
@model BHI_Asset_Portal_WebApp.Models.CreativeSet


<div>
    <h4>Creative Set</h4>

    <dl class="dl-horizontal">

        @Html.Partial($"/Views/CreativeSets/{ Model.GetType().Name.ToString() }Details.cshtml", Model)


        <dt>
            @Html.DisplayNameFor(model => model.SpecialInstructions)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SpecialInstructions)
        </dd>

    </dl>
    <div class="row form-group">

        @Html.LabelFor(model => model.ScreenShotUrl, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ScreenShotUrl, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ScreenShotUrl, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<div class="col-md-6 pull-right">
    <input type="submit" value="Save" class="btn btn-success pull-right" />
</div>
        </div>

