@model BHI_Asset_Portal_WebApp.Models.NativeAds


    
<div class="form-horizontal">
    @Html.HiddenFor(model => model.CreativeSetID, new { @class = "CreativeSetID" })


    <div class="form-group">
        @Html.LabelFor(model => model.LogoImageURL, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorForModel("ImageUpload", new { Width = 130, Height = 45, CreativeSize = "Logo", ColumnName = "LogoImageURL" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HeroImageURL, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorForModel("ImageUpload", new { Width = 1200, Height = 628, CreativeSize = "Hero", ColumnName = "HeroImageURL", Ratio = 2 })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HeaderCopy, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.HeaderCopy, "InputMaxLength", new { MaxLength = 45 })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BodyCopy, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.BodyCopy, "InputMaxLength", new { MaxLength = 90, MultLine = "true" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CallToActionCopy, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CallToActionCopy, "InputMaxLength", new { MaxLength = 20 })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LandingURL, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LandingURL, "URLField", new { SetIDName = "LandingURL" + Model.CreativeSetID })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ImpressionTrackerURL, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ImpressionTrackerURL, "URLFieldOptional", new { SetIDName = "ImpressionTrackerURL" + Model.CreativeSetID })

        </div>
    </div>


</div>