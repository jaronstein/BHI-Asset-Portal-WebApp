@model IEnumerable<BHI_Asset_Portal_WebApp.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BHIOrderNumber)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.OrderName)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BHIOrderNumber)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.OrderName)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID}) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
